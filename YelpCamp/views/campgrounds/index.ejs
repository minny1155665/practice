<%- layout('layouts/boilerplate') -%>
    <h1 class="mb-3">All Campgrounds</h1>

    <% for (let camp of camps){ %> 
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= camp.image %> " alt="" class="img-fluid">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= camp.title %> </h5>
                        <p class="card-text"><%= camp.description %> </p>
                        <p><small class="text-muted"><%= camp.location %> </small></p>
                        <a href="/campgrounds/<%= camp._id %> " class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        </div>
    <% } %> 
    
    <a href="/campgrounds/new">New a camp</a>
