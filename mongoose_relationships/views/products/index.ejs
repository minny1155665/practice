<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products List</title>
</head>
<body>
    <!-- header -->
    <% if (category == 'all') { %> 
        <h1>All Products</h1>
    <% } else { %> 
        <h1><%= category %>s</h1>
    <% } %> 

    <!-- content -->
    <% for (let p of products) { %> 
        <li onclick="location.href='/products/<%= p._id %>'"><%= p.name %> </li>
    <% } %> 
    <br>

    <!-- footer -->
    <% if (category == 'all') { %> 
        <a href="/products/new">Create New Product</a>
        <br>
    <% } else { %> 
        <a href="/products">All Products List</a>
        <br>
    <% } %> 
</body>
</html>